<Window x:Class="RazorSpy.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MainWindow" Height="502" Width="773" DataContext="{Binding ViewModel, RelativeSource={RelativeSource Self}}">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="0.5*"/>
            <ColumnDefinition Width="0.5*"/>
        </Grid.ColumnDefinitions>
        <TextBox Margin="10,10,10,10" TextWrapping="Wrap" VerticalAlignment="Stretch" Text="{Binding RazorCode, UpdateSourceTrigger=PropertyChanged}" AcceptsReturn="True" AcceptsTab="True" TextOptions.TextFormattingMode="Display"/>
        <TextBox Margin="10,10,10,10" TextWrapping="Wrap" VerticalAlignment="Stretch" Text="{Binding GeneratedCode, Mode=OneWay, UpdateSourceTrigger=PropertyChanged}" IsReadOnly="true" TextOptions.TextFormattingMode="Display" Grid.Column="1"/>

    </Grid>
</Window>
